# RepeatNoMore Configuration
# Copy this file to .env and fill in your values

# ===================
# LLM Provider Settings
# ===================
LLM_PROVIDER=ollama  # Options: ollama, openai, anthropic
LLM_MODEL=llama3.2

# OpenAI (if using)
OPENAI_API_KEY=

# Anthropic (if using)
ANTHROPIC_API_KEY=

# Ollama (if using local)
OLLAMA_BASE_URL=http://localhost:11434

# ===================
# Discord Bot
# ===================
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=

# ===================
# Database (PostgreSQL + pgvector)
# ===================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/repeatnomore
PGVECTOR_ENABLED=true

# ===================
# Embedding Settings
# ===================
EMBEDDING_PROVIDER=ollama  # Options: ollama, openai
EMBEDDING_MODEL=nomic-embed-text

# ===================
# Application Settings
# ===================
LOG_LEVEL=INFO
ENVIRONMENT=development

# ===================
# Optional: Teams Integration
# ===================
# TEAMS_APP_ID=
# TEAMS_APP_PASSWORD=
